#
# /etc/exim4/update-exim4.conf.conf
# 
# Generated by Chef for <%= @node[:fqdn] %>
#

<% case @deployment -%>
<% when "smarthost" -%>
dc_eximconfig_configtype='internet'
dc_other_hostnames='<%= [:domain] %>:map-cloud-01.eu:mail.map-cloud-01.eu:*.mapofmedicine.com:mapofmedicine.com:mapofmedicine.eu:tracking.mapofmedicine.com:tracking2.mapofmedicine.com:medictomedic.com:*.map-cloud-01.eu'
dc_local_interfaces=''
dc_readhost=''
dc_relay_domains='<%= @node[:domain] %>'
dc_smarthost=''
dc_hide_mailname=''
<% when "satellite" -%>
dc_eximconfig_configtype='satellite'
dc_other_hostnames='<%= @node[:fqdn] %>'
dc_local_interfaces='127.0.0.1'
dc_readhost='<% @node[:domain] -%>'
# This allows Exim to relay e-mails from Tomcat to the smarthost.
# Safe to relay for all domains here, as Exim is only listening on localhost.
dc_relay_domains='*'
dc_smarthost='<%= @node[:exim][:smarthost] %>'
dc_hide_mailname='true'
<% end -%>
dc_minimaldns='false'
dc_relay_nets='<%= @node[:exim][:relaynets] %>'
CFILEMODE='644'
dc_use_split_config='false'
dc_mailname_in_oh='true'
dc_localdelivery='mail_spool'
