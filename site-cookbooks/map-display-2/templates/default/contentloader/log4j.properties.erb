# Standard Log4J syntax applies

# Log all messages down to level INFO
# Write messages to console and to contentloader.log file

log4j.rootCategory=INFO, full, errors

log4j.category.console=INFO, stdout
log4j.category.com.oyster.mom.contentloader.logging.AuditLogger=INFO, audit

log4j.logger.org.springframework=WARN
log4j.logger.net.sf.ehcache=ERROR
log4j.logger.org.hibernate=ERROR

# Defines the console logger

log4j.appender.stdout=org.apache.log4j.ConsoleAppender
log4j.appender.stdout.layout=org.apache.log4j.PatternLayout
log4j.appender.stdout.layout.ConversionPattern=%m%n

log4j.appender.full=org.apache.log4j.FileAppender
log4j.appender.full.File=<%= @contentloader_path %>/logs/contentloader.log
log4j.appender.full.layout=org.apache.log4j.PatternLayout
log4j.appender.full.layout.ConversionPattern=%d %p %c - %m%n

log4j.appender.errors=org.apache.log4j.FileAppender
log4j.appender.errors.File=<%= @contentloader_path %>/logs/contentloadererrors.log
log4j.appender.errors.threshold=WARN
log4j.appender.errors.layout=org.apache.log4j.PatternLayout
log4j.appender.errors.layout.ConversionPattern=%d %p %c - %m%n

log4j.appender.audit=org.apache.log4j.FileAppender
log4j.appender.audit.File=<%= @contentloader_path %>/logs/audit.log
log4j.appender.audit.layout=org.apache.log4j.PatternLayout
log4j.appender.audit.layout.ConversionPattern=datetime=[%d],%m%n
