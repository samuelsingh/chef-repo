<VirtualHost *:80>
  ServerName <%= @server_name %>
  ServerAlias <% @server_aliases.each do |a| %><%= "#{a}" %> <% end %>
  DocumentRoot <%= @docroot %>
  RewriteEngine On

  <Location />
    Order allow,deny
    Deny from all

    DAV svn
    SVNParentPath <%= @svn_root %>
  </Location>

<% @svn_repos.each do |repo| %>
  <Location /<%= repo[:name] %>>
    Order allow,deny
    Allow from all

    AuthName "<%= repo[:auth_name] %>"
    AuthType Basic
    AuthBasicProvider ldap

    # Where the LDAP server is
    AuthLDAPURL ldap://<%= @ldap_host %>:<%= @ldap_port %>/<%= @ldap_path %>

    # Credentials for doing the LDAP lookup.
    # Very naughty. We need to set up and use a RO account
    AuthLDAPBindDN <%= @ldap_binddn %>
    AuthLDAPBindPassword <%= @ldap_bindpassword %>

    # Grant access to the mom-ias group (Support Team)
    Require ldap-group <%= repo[:ldap_group] %>

    # These configure how to identify a group in LDAP
    AuthLDAPGroupAttribute memberUid
    AuthLDAPGroupAttributeIsDN    off
  </Location>

<% end %>
  
  <Location /server-status>
    SetHandler server-status

    Order Deny,Allow
    Deny from all
    Allow from 127.0.0.1
  </Location>

  LogLevel info
  CustomLog "|/usr/sbin/rotatelogs <%= @node[:apache][:log_dir] %>/access-<%= @hostname %>.log.%Y%m%d 86400" mtm
  ErrorLog "|/usr/sbin/rotatelogs <%= @node[:apache][:log_dir] %>/errors-<%= @hostname %>.log.%Y%m%d 86400"

</VirtualHost>

