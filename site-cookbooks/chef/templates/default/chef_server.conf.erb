# Server Proxy for API
<VirtualHost *:443>
  ServerName <%= @params[:api_proxy] %>
  <% unless @params[:server_aliases].empty? do %>
  ServerAlias <% @params[:server_aliases].each do |a| %><%= "#{a}" %> <% end %>
  <% end %>

  DocumentRoot /var/www/vhosts/<%= @params[:server_name] %>

  ExpiresActive On
  ExpiresByType text/css "access plus <%= node[:chef_proxy][:css_expire_hours] %> hours"
  ExpiresByType text/javascript "access plus <%= node[:chef_proxy][:js_expire_hours] %> hours"
  ExpiresByType application/x-javascript "access plus <%= node[:chef_proxy][:js_expire_hours] %> hours"
  ExpiresByType application/javascript "access plus <%= node[:chef_proxy][:js_expire_hours] %> hours"

  <Proxy balancer://chef_server>
    BalancerMember http://<%= @params[:chef_server] %>:<%= @params[:server_port] %>
    Order deny,allow
    Allow from all
  </Proxy>

  LogLevel info
  ErrorLog <%= @params[:log_dir] %>/<%= @params[:api_proxy %>-error.log
  CustomLog <%= @params[:log_dir] %>/<%= @params[:api_proxy] %>-access.log combined

  SSLEngine On
  SSLCertificateFile /etc/chef/certificates/<%= @params[:server_name] %>.pem
  SSLCertificateKeyFile /etc/chef/certificates/<%= @params[:server_name] %>.pem

  RequestHeader set X_FORWARDED_PROTO 'https'

  RewriteEngine On
  RewriteCond %{DOCUMENT_ROOT}/%{REQUEST_FILENAME} !-f
  RewriteRule ^/(.*)$ balancer://chef_server%{REQUEST_URI} [P,QSA,L]
</VirtualHost>

