<Context path="/mapmanager" reloadable="false" debug="0">
		<Resource name="jdbc/mom"
				auth="Container"
				type="javax.sql.DataSource"
				maxActive="1000"
				maxIdle="50"
				maxWait="10000"
				username="<%= @dbuser %>"
				password="<%= @dbpass %>"
				driverClassName="net.sourceforge.jtds.jdbc.Driver"
				url="jdbc:jtds:sqlserver://<%= @dbhost %>:1433/<%= @dbname %>;lobBuffer=131072;charset=utf8" />
		
		<Resource name="mail/mom" 
				auth="Container"
				type="javax.mail.Session"
				mail.smtp.host="localhost"
				mail.smtp.port="25"
				mail.smtp.auth="false"
				mail.smtp.starttls.enable="false"
				mail.transport.protocol="smtp" />
</Context>
