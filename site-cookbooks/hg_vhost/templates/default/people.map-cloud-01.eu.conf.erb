# Redirect requests for www.<%= @hostname %> to <%= @hostname %>
<VirtualHost "*:80">
    ServerName www.<%= @hostname %>
        RewriteEngine On
        RewriteRule ^(.*)$ http://<%= @hostname %>$1 [R]
</VirtualHost>


<VirtualHost "*:80">
	ServerName <%= @hostname %>  

     <% @webapps.each do |webapp,params| -%>
    DocumentRoot <%= params.fetch("document_root") %>
     <% end -%>
	
    <Directory "/usr/share/gosa/html">
        Options FollowSymLinks
        AllowOverride None


        Order allow,deny
        Allow from all

    </Directory>
    
    CustomLog /var/log/apache2/access-people.map-cloud-01.eu.log mtm
    ErrorLog /var/log/apache2/errors-people.map-cloud-01.eu.log

</VirtualHost>
