# configuration for JCR connection to database
m2mr2.jcr.host=<%= @node[:mms][:application][:repository][:dbhost] %>
m2mr2.jcr.port=1433
m2mr2.jcr.dbname=<%= @node[:mms][:application][:repository][:dbname] %>
m2mr2.jcr.url=jdbc:jtds:sqlserver://${m2mr2.jcr.host}:${m2mr2.jcr.port}/${m2mr2.jcr.dbname};lobBuffer=131072

m2mr2.jcr.user=<%= @node[:mms][:application][:repository][:dbuser] %>
m2mr2.jcr.password=<%= @node[:mms][:application][:repository][:dbpass] %>
m2mr2.jcr.schema=mssql

m2mr2.jcr.driver=net.sourceforge.jtds.jdbc.Driver

# settings for lucene indexes
m2mr2.jcr.search.index.min.merge.docs=1000
m2mr2.jcr.search.index.max.merge.docs=100000
m2mr2.jcr.search.index.merge.factor=10

m2mr2.jcr.workspaces.path=${m2mr2.jcr.repositoryIndexDir}

