mm.home=<%= @mapmanager_base %>
mm.fqdn=<%= @node[:mms][:common][:fqdn] %>

# Indicate whether to show option to log into 'Home view' or 'See full list of views' on login page.
# Should be false only for Root MMS.
<% if @multiple_views == 'false' -%>
# Whether to allow the choice of view on login
chooseTabAction.active=false
show.variant.selector=false
<% else -%>
# Whether to allow the choice of view on login
chooseTabAction.active=true
show.variant.selector=true
<% end -%>

# Indicate whether to show athens login link
show.athens.login.link=<%= @athens_link %>

mom.fqdn=<%= @node[:mms][:common][:fqdn] %>
securityRealm.athensUsers.homeVariantRoles=Viewer